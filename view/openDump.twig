{% extends "base.twig" %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-lg-2">
            {% if (info.photos)|length > 0 %}
            <img src="{{ info.photos[0] }}" class="img-thumbnail view-image" />
            {% endif %}
        </div>
        <div class="col align-self-center">
            <h1>{{ info.name }}</h1>
            <p class="lead view-position">{{ info.location }}</p>
        </div>
    </div>
    <div class="view-content">
        <div class="biography">
            <br>Дата открытия: {{ info.dateFind }}
            <br>Дата подачи заявления: {{ info.dateStatement }}
        </div><hr class="my-4">
        <div class="row">
            <div class="col-lg-3 view-type">
                Ваши фотографии:
            </div>
        </div>
        <div class="row">
            {% if (info.photos)|length > 0 %}
            <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="{{ info.photos[0] }}" class="d-block " style="height: 300px;" alt="images/dump11.jpg">
                    </div>
                    {% for photo in info.photos %}
                        <div class="carousel-item">
                            <img src="{{ photo }}" class="d-block " style="height: 300px;" alt="images/dump12.jpg">
                        </div>
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        {% endif %}
        </div><hr class="my-4">
        <div class="row">
            <div class="col-lg-3">
                Волонтерства:
            </div>
        </div>
        <div class="row">
            <div class="col interests moreMedia">
                <ul class="list-unstyled">
                    {% for vol in info.vols %}
                        <li class="media my-4">
                            <!-- <img src="images/volunteer11.jpg" height="100px" class="mr-3" alt="images/volunteer1.jpg"> -->
                            <div class="media-body">
                            <h5 class="mt-0 mb-1">{{ vol.dateVolunteers }} Человек {{ vol.countVolunteers}}</h5>
                            {{ vol.descryption}}
                            </div>
                            <a class="btn btn-primary" data-toggle="collapse" href="#multiCollapseEdit1" role="button" aria-expanded="false" aria-controls="multiCollapseEdit1">Редактировать</a>
                            <button type="button" class="btn btn-danger">Удалить</button>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <button type="button" class="btn btn-primary float-right" type="button" data-toggle="collapse" data-target="#multiCollapseEdit1" aria-expanded="true" aria-controls="multiCollapseEdit1">Добавить</button>
        <br>
        <div class="row">
            <div class="col">
                <div class="collapse multi-collapse" id="multiCollapseEdit1">
                        <div class="card card-body">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroup-sizing-sm">Загловок</span>
                            </div>
                            <input type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="inputGroup-sizing-sm">Описание</span>
                            </div>
                            <input type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
                            <button type="button" class="btn btn-primary" href="#multiCollapseEdit1" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="multiCollapseEdit1">Готово</button>
                        </div>
                    </div>
                </div>
        </div>
        
        <br>
        <hr class="my-4">
        <div class="row">
            <div class="col-lg-3 view-type">
                События:
            </div>
        </div>
        <div class="row">
            <div class="col interests moreMedia">
                <ul class="list-unstyled">
                </ul>
            </div>
        </div>
    </div>
        
    <button type="button" class="btn btn-primary float-sm-right" type="button" data-toggle="collapse" data-target="#multiCollapseEdit2" aria-expanded="false" aria-controls="multiCollapseEdit2">Добавить</button>
    <br>
    <div class="row">
        <div class="col">

            <div class="collapsing multi-collapse" id="multiCollapseEdit2">
                <div class="card card-body">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-sm">Загловок</span>
                    </div>
                    <input type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="inputGroup-sizing-sm">Описание</span>
                    </div>
                    <input type="text" class="form-control" aria-label="Small" aria-describedby="inputGroup-sizing-sm">
                    <button type="button" class="btn btn-primary" href="#multiCollapseEdit2" data-toggle="collapse" role="button" aria-expanded="false" aria-controls="multiCollapseEdit2">Готово</button>
                </div>
            </div>
        </div>
    </div>
    <br>
</div>
{% endblock %}