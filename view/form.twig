<div class="modal-header">
    <h5 class="modal-title">
        {% if not edit %}Добавление свалки{% else %}Редактировать свалку{% endif %}
    </h5>
</div>

<div class="modal-body">
    <form id="form" action="" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="nameDump">Название свалки</label>
                <input type="text" class="form-control" name="nameDump" placeholder="Большая свалка" 
                    {% if edit %} value="{{ info.name }}" {% endif %} />
            </div>
            <div class="form-group">
                <label for="location">Местоположение свалки</label>
                <input type="text" class="form-control" name="location" placeholder="Большая свалка" 
                    {% if edit %} value="{{ info.location }}" {% endif %} />
            </div>



            <div class="form-group">
                <label for="nameDump">Дата обнаружения свалки</label>
                <input id="dateFind" width="276" name="dateFind"
                    {% if edit %} value="{{ info.dateFind }}" {% endif %} />
                <script>
                        $('#dateFind').datepicker({
                            format: 'yyyy-mm-dd',
                            uiLibrary: 'bootstrap4'
                        });
                </script>
            </div>
            <div class="form-group">
                <label for="nameDump">Дата подачи заявления</label>
                <input id="dateStatement" width="276" name="dateStatement"
                    {% if edit %} value="{{ info.dateStatement }}" {% endif %} />
                <script>
                        $('#dateStatement').datepicker({
                            format: 'yyyy-mm-dd',
                            uiLibrary: 'bootstrap4'
                        });
                </script>
            </div>
            
                
                <hr/>
                <div class="form-group" style="margin-bottom:0;">
                    <div class="input-group mb-3">
                        {# <div class="input-group-prepend">
                            <span class="input-group-text">Выберите фотографии</span>
                        </div> #}
                        <label for="photoLocation">Папка с фото</label>
                        <input type="text" class="form-control" name="photoLocation" placeholder="Большая свалка" 
                            {% if edit %} value="{{ info.photos }}" {% endif %} />
                        {# <div class="custom-file">
                            <input type="file" class="custom-file-input" id="photoLocation" name="photoLocation">
                            <label class="custom-file-label" for="photoLocation">папка</label>
                        </div> #}
                    </div>
                    {# <div class="row">
                        <div class="col-lg-3 view-type">
                            Ваши фотографии:
                        </div>
                    </div>
                    {% if edit %}
                    <div class="row">
                        <div id="carouselExampleFade" class="carousel slide carousel-fade" data-ride="carousel">
                            <div class="carousel-inner">
                                    {% if info.photoOne %}
                                        <div class="carousel-item active">
                                            <img src="{{ info.photoOne }}" class="d-block " style="height: 300px;" alt="images/dump11.jpg">
                                        </div>
                                        {% for photo in info.photos %}
                                            <div class="carousel-item">
                                                <img src="{{ photo }}" class="d-block " style="height: 300px;" alt="images/dump12.jpg">
                                            </div>
                                        {% endfor %}00000000000
                                    {% endif %}
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleFade" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleFade" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                    {% endif %} #}
            </div>
    </form>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
    <button type="button" class="btn btn-primary" onclick="
        {% if not edit %}
            landfill.submit($('#form').get(0))
        {% else %}
            landfill.update($('form#form').get(0), {{ info.id }})
        {% endif %}">{% if not edit %}Добавить{% else %}Сохранить
        изменения{% endif %}</button>
</div>